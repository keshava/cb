{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://uri.etsi.org/ngsi-ld/schema/common.json",
  "title": "NGSI-LD Common Definitions",
  "description": "NGSI-LD Common",
  "definitions": {
    "LdContext": {
      "anyOf": [
        {
          "type": "object"
        },
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "anyOf": [
              {
                "type": "string",
                "format": "uri"
              },
              {
                "type": "object"
              }
            ]
          }
        }
      ]
    },
    "Dates": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "modifiedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Endpoint": {
      "type": "object",
      "required": [
        "uri"
      ],
      "properties": {
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "accept": {
          "type": "string",
          "enum": [
            "application/json",
            "application/ld+json"
          ]
        }
      }
    },
    "EntityInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "idPattern": {
          "type": "string",
          "format": "regex"
        }
      }
    }
}
